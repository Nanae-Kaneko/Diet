<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fffffd68">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/caltextView"
                android:layout_gravity="center_horizontal"
                android:textSize="50dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cakebutton"
                android:layout_weight="1"
                android:onClick="cake"
                android:background="@drawable/cake" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/swbutton"
                android:layout_weight="1"
                android:onClick="sweets"
                android:background="@drawable/snack" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/humbutton2"
                android:layout_weight="1"
                android:onClick="humber"
                android:background="@drawable/hum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ramenbutton3"
                android:layout_weight="1"
                android:onClick="ramen"
                android:background="@drawable/ramen" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sportsbutton2"
                android:layout_weight="1"
                android:onClick="sports"
                android:background="@drawable/sports" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="RESET"
                android:id="@+id/resetpbutton"
                android:layout_weight="1"
                android:onClick="reset"
                android:background="#ffffffff"
                android:layout_margin="10dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
